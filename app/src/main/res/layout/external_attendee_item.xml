<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginBottom="10dp">

    <Button
        android:id="@+id/inviteResponseMaybe"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#4CAF50"
        android:text="@string/inviteResponseMaybe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inviteResponseNo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/inviteResponseNo"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#4CAF50"
        android:text="@string/inviteResponseNo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inviteResponseYes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/externalAttendeeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/externalAttendeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="attendeeName"
        app:layout_constraintStart_toEndOf="@+id/externalAttendeeNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/inviteResponseYes"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#4CAF50"
        android:text="@string/inviteResponseYes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inviteResponseMaybe"
        app:srcCompat="@drawable/line" />

</androidx.constraintlayout.widget.ConstraintLayout>