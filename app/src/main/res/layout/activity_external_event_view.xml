<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="105dp"
    tools:layout_editor_absoluteY="250dp">


<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExternalEventView.external_event_view">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/externalViewFragmentContainer"
        android:name="com.example.myapplication.ViewEventInfomation.event_details_eventinfo"
        android:layout_width="415dp"
        android:layout_height="731dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:text="Customer list to go here + let people accept events"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/externalViewFragmentContainer" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>