<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginBottom="10dp"
    >

    <Button
        android:id="@+id/declineEventButton"
        android:layout_width="60dp"
        android:layout_height="53dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="No"
        app:layout_constraintStart_toEndOf="@+id/acceptEventtButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/maybeEventButton"
        android:layout_width="89dp"
        android:layout_height="54dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:text="Maybe"
        app:layout_constraintStart_toEndOf="@+id/declineEventButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/attendeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="attendeeName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/acceptEventtButton"
        android:layout_width="61dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Yes"
        app:layout_constraintStart_toEndOf="@+id/attendeeName"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>