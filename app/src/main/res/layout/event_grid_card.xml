<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/event_card_background">

    <TextView
        android:id="@+id/eventCardDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Event Date"
        android:textColor="#F4F4F4"
        app:layout_constraintEnd_toEndOf="@+id/eventCardTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eventCardTitle"
        app:layout_constraintTop_toBottomOf="@+id/eventCardTitle" />

    <TextView
        android:id="@+id/eventCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Title"
        android:textColor="#F4F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventCardDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Event Description"
        android:textColor="#F4F4F4"
        app:layout_constraintEnd_toEndOf="@+id/eventCardEndTime"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/eventCardEndTime"
        app:layout_constraintTop_toBottomOf="@+id/eventCardEndTime" />

    <TextView
        android:id="@+id/eventCardEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Event End Time "
        android:textColor="#F4F4F4"
        app:layout_constraintEnd_toEndOf="@+id/eventCardStartTime"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="@+id/eventCardStartTime"
        app:layout_constraintTop_toBottomOf="@+id/eventCardStartTime" />

    <TextView
        android:id="@+id/eventCardStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Event Start Time "
        android:textColor="#F4F4F4"
        app:layout_constraintEnd_toEndOf="@+id/eventCardDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eventCardDate"
        app:layout_constraintTop_toBottomOf="@+id/eventCardDate" />

</androidx.constraintlayout.widget.ConstraintLayout>