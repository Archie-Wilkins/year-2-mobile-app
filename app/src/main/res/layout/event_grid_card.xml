<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/event_card_background">


    <TextView
        android:id="@+id/eventCardEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Event End Time "
        android:textColor="#F4F4F4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/eventGridCardDate" />

    <TextView
        android:id="@+id/eventCardDate"
        android:layout_width="64dp"
        android:layout_height="18dp"
        android:layout_marginStart="2dp"
        android:text="Event"
        android:textColor="#F4F4F4"
        app:layout_constraintStart_toEndOf="@+id/eventGridCardDate"
        app:layout_constraintTop_toTopOf="@+id/eventGridCardDate" />

    <TextView
        android:id="@+id/eventGridCardDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/card_date"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/eventCardTitle"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventCardTitle" />

    <TextView
        android:id="@+id/eventCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="Title"
        android:textColor="#F4F4F4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventCardDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Event Description"
        android:textColor="#F4F4F4"
        app:layout_constraintStart_toStartOf="@+id/eventCardStartTime"
        app:layout_constraintTop_toBottomOf="@+id/eventCardStartTime" />

    <TextView
        android:id="@+id/eventCardStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Event Start Time "
        android:textColor="#F4F4F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventGridCardDate" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="107dp"
        android:layout_height="86dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/calendar" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="34dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/tick" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_baseline_arrow_right_alt_24"
        app:layout_constraintStart_toEndOf="@+id/eventCardStartTime"
        app:layout_constraintTop_toBottomOf="@+id/eventGridCardDate" />

</androidx.constraintlayout.widget.ConstraintLayout>