<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity android:name=".ExternalEventView.external_event_view"
            android:exported="true">
            android:name=".ExternalEventView.external_event_view"
            android:exported="true"
            android:screenOrientation="portrait"
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
                <category android:name="android.intent.category.BROWSABLE"></category>

                <data
                    android:scheme="https"
                    android:host="@string/internalLink" />
                <data android:scheme="http"
                    android:host="@string/internalLink"></data>
            </intent-filter>
    </activity>
        <activity
            android:name=".ViewEventInfomation.event_details"
            android:exported="true"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".Dashboard.dashboard"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".NewEvent.newEventForm"
            android:exported="true"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".Login.login"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>